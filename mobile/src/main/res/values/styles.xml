    <style name="NAKBuchTheme" parent="OneUITheme">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
    </style>

    <style name="ButtonStyle.Colored" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?colorAccent</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="iconTint">@color/oui_primary_icon_color</item>
        <item name="drawableTint">@color/oui_primary_icon_color</item>
    </style>

    <style name="ButtonStyle.Transparent" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="iconTint">?colorAccent</item>
        <item name="drawableTint">?colorAccent</item>
    </style>

    <style name="ButtonStyle.Filled" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?colorAccent</item> <!--TODO-->
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="iconTint">@color/oui_primary_icon_color</item>
        <item name="drawableTint">@color/oui_primary_icon_color</item>
    </style>

    <style name="NumberButton" parent="ButtonStyle.Colored">
        <item name="android:textSize">@dimen/number_button_textSize</item>
        <item name="android:layout_width">@dimen/number_button_width</item>
        <item name="android:layout_height">@dimen/number_button_height</item>
        <item name="android:layout_margin">@dimen/number_button_margin</item>
        <!-- TODO item name="cornerRadius">@dimen/rounded_corner_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="iconSize">40dp</item-->
    </style>

    <style name="DrawerDividerStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:foreground">@drawable/drawer_item_separator_bg</item>
    </style>

    <style name="MenuPopupAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sesl_menu_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/sesl_menu_popup_exit</item>
    </style>

