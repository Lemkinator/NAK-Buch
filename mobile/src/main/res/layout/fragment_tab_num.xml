<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.dlyt.yanndroid.oneui.widget.NestedScrollView
        android:id="@+id/numpadScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:fillViewport="true"
        app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hymnTitlePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/sesl_tooltip_foreground"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linearLayoutButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hymnTitlePreview"
                android:orientation="horizontal"
                android:gravity="right"
                tools:ignore="RtlHardcoded">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/switchSideButton1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/number_field_height"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_oui_arrow_left"
                    app:iconGravity="textTop"
                    app:iconSize="45dp"
                    app:strokeWidth="1dp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_1"
                        style="@style/NumberButton"
                        android:text="1"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_2"
                        style="@style/NumberButton"
                        android:text="2"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_3"
                        style="@style/NumberButton"
                        android:text="3"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_4"
                        style="@style/NumberButton"
                        android:text="4"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_5"
                        style="@style/NumberButton"
                        android:text="5"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_6"
                        style="@style/NumberButton"
                        android:text="6"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_7"
                        style="@style/NumberButton"
                        android:text="7"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_8"
                        style="@style/NumberButton"
                        android:text="8"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_9"
                        style="@style/NumberButton"
                        android:text="9"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_z"
                        style="@style/NumberButton"
                        app:icon="@drawable/ic_oui_back_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_0"
                        style="@style/NumberButton"
                        android:text="0"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b_ok"
                        style="@style/NumberButton"
                        app:icon="@drawable/ic_oui3_selected" />
                </GridLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/switchSideButton2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/number_field_height"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_oui_arrow_right"
                    app:iconGravity="textTop"
                    app:iconSize="45dp"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </RelativeLayout>

    </de.dlyt.yanndroid.oneui.widget.NestedScrollView>

    <de.dlyt.yanndroid.oneui.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/numpadScrollView"
        android:animateLayoutChanges="true"
        android:fillViewport="true"
        app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/hymnTextPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:ellipsize="end"
            android:textSize="20sp" />
    </de.dlyt.yanndroid.oneui.widget.NestedScrollView>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiViewTab0"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
