<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.layout.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_textview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    app:expanded="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_location="main_content">

        <de.dlyt.yanndroid.oneui.widget.NestedScrollView
            android:id="@+id/nestedScrollViewTextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sesl_tooltip_foreground" />

                    <TextView
                        android:id="@+id/tvCopyright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/jokeButton"
                        style="@style/ButtonStyle.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="20dp"
                        android:maxLines="8"
                        android:text="@string/jokeButtonText"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/whyNoFullTextButton"
                        style="@style/ButtonStyle.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="20dp"
                        android:maxLines="5"
                        android:text="@string/whyNoFullText"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/openOfficialAppButton"
                        style="@style/ButtonStyle.Transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="30dp"
                        android:maxLines="5"
                        android:text="@string/openOfficialApp"
                        android:visibility="gone" />

                    <de.dlyt.yanndroid.oneui.widget.RoundFrameLayout
                        android:id="@+id/notesGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:background="@color/item_background_color"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/rounded_corner_size">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="@dimen/rounded_corner_size">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tvNotiz"
                                    style="?textAppearanceListItem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:text="@string/notes"
                                    android:textAlignment="center" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonKopieren"
                                    style="@style/ButtonStyle.Transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    app:icon="@drawable/ic_oui4_copy" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/buttonSenden"
                                    style="@style/ButtonStyle.Transparent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    app:icon="@drawable/ic_oui4_share" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/editTextNotiz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@string/insertNote"
                                android:hint="@string/insertNote"
                                android:inputType="textMultiLine" />

                        </LinearLayout>

                    </de.dlyt.yanndroid.oneui.widget.RoundFrameLayout>

                    <LinearLayout
                        android:id="@+id/calendarGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <de.dlyt.yanndroid.oneui.widget.RoundFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/item_background_color">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <CalendarView
                                    android:id="@+id/calendarView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/addDateButton"
                                    style="@style/ButtonStyle.Filled"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/add"
                                    app:icon="@drawable/ic_oui_plus" />

                                <View style="@style/DrawerDividerStyle"
                                    android:layout_marginHorizontal="15dp"/>

                                <de.dlyt.yanndroid.oneui.view.RecyclerView
                                    android:id="@+id/hymnHistoryList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/item_background_color"
                                    android:scrollbars="vertical" />

                            </LinearLayout>

                        </de.dlyt.yanndroid.oneui.widget.RoundFrameLayout>



                    </LinearLayout>

                </LinearLayout>

                <nl.dionsegijn.konfetti.xml.KonfettiView
                    android:id="@+id/konfettiViewTextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>


        </de.dlyt.yanndroid.oneui.widget.NestedScrollView>

    </FrameLayout>

    <de.dlyt.yanndroid.oneui.widget.TabLayout
        android:id="@+id/textView_bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_location="footer" />

    <include layout="@layout/content_drawer" />

</de.dlyt.yanndroid.oneui.layout.DrawerLayout>
