<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.layout.AppInfoLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AboutActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/about_btn_open_in_store"
        style="@style/OneUI.AppInfoButton"
        android:drawableStart="@drawable/ic_baseline_oui_galaxy_store_outline_24"
        android:text="@string/openInPlaystore" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/about_btn_open_oneui_github"
        style="@style/OneUI.AppInfoButton"
        android:drawableStart="@drawable/ic_baseline_oui_web_search_24"
        android:text="@string/oneUiLibaryGithub" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/about_btn_help"
        style="@style/OneUI.AppInfoButton"
        android:drawableStart="@drawable/ic_baseline_oui_help_outline_24"
        android:text="@string/help" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/about_btn_about_me"
        style="@style/OneUI.AppInfoButton"
        android:drawableStart="@drawable/ic_baseline_oui_contact_outline_24"
        android:text="@string/aboutMe" />

</dev.oneuiproject.oneui.layout.AppInfoLayout>