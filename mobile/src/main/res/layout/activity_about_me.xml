<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.layout.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_support_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:expanded="false"
    app:title="@string/aboutMe">

    <de.dlyt.yanndroid.oneui.widget.NestedScrollView
        android:id="@+id/nestedScrollViewHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <!--com.google.android.material.textview.MaterialTextView
                    style="?android:listSeparatorTextViewStyle"
                    android:text="@string/buyMeACoffee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/coffeeButtonSmall"
                        style="@style/ButtonStyle.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/number_button_height"
                        android:layout_margin="@dimen/number_button_margin"
                        android:text="Klein"
                        app:icon="@drawable/ic_oui_like_off" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/coffeeButtonMedium"
                        style="@style/ButtonStyle.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/number_button_height"
                        android:layout_margin="@dimen/number_button_margin"
                        android:text="Mittel"
                        app:icon="@drawable/ic_oui_favorite_off" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/coffeeButtonLarge"
                        style="@style/ButtonStyle.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/number_button_height"
                        android:layout_margin="@dimen/number_button_margin"
                        android:text="GroÃŸ"
                        app:icon="@drawable/ic_oui3_gift" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    style="?android:listSeparatorTextViewStyle"
                    android:text="@string/watchAdHeader" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/watchAdButton"
                        style="@style/ButtonStyle.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/number_button_height"
                        android:layout_margin="@dimen/number_button_margin"
                        android:text="@string/watchAd"
                        app:icon="@drawable/ic_oui_play" />

                </LinearLayout-->

                <com.google.android.material.textview.MaterialTextView
                    style="?android:listSeparatorTextViewStyle"
                    android:text="@string/aboutMe" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/websiteButton"
                        style="@style/ButtonStyle.Filled"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/number_button_height"
                        android:layout_weight="1"
                        android:text="@string/website"
                        app:icon="@drawable/ic_oui_website" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ticktocktrollButton"
                        style="@style/ButtonStyle.Filled"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/number_button_height"
                        android:layout_weight="1"
                        android:text="@string/tiktokTroll"
                        app:icon="@drawable/ic_oui_link" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    style="?android:listSeparatorTextViewStyle"
                    android:text="@string/supportMe" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:text="@string/supportMeText" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/supportMeButton"
                    style="@style/ButtonStyle.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/number_button_height"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="7dp"
                    android:text="@string/writeEmail"
                    app:icon="@drawable/ic_oui4_mail" />


                <com.google.android.material.textview.MaterialTextView
                    style="?android:listSeparatorTextViewStyle"
                    android:text="@string/rateApp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/writeReviewButton"
                        style="@style/ButtonStyle.Filled"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/number_button_height"
                        android:layout_weight="1"
                        android:text="@string/writeReview"
                        app:icon="@drawable/ic_oui_pen" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/reviewCommentButton"
                        style="@style/ButtonStyle.Transparent"
                        android:layout_width="@dimen/number_button_height"
                        android:layout_height="@dimen/number_button_height"
                        app:icon="@drawable/ic_oui4_help" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    style="?android:listSeparatorTextViewStyle"
                    android:text="@string/share" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shareAppButton"
                    style="@style/ButtonStyle.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/number_button_height"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="7dp"
                    android:text="@string/shareApp"
                    app:icon="@drawable/ic_oui4_share" />

            </LinearLayout>

            <nl.dionsegijn.konfetti.xml.KonfettiView
                android:id="@+id/konfettiViewAboutMePage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </de.dlyt.yanndroid.oneui.widget.NestedScrollView>

</de.dlyt.yanndroid.oneui.layout.DrawerLayout>


