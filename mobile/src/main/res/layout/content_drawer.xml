<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:layout_location="drawer_panel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/draweritem_gesangbuch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_audio_outline_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/titleGesangbuch"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/draweritem_chorbuch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_audio_outline_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/titleChorbuch"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/draweritem_jugendliederbuch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_audio_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/titleJugendliederbuch"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/draweritem_jbergaenzungsheft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_audio_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/titleJBErgaenzungsheft"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

        <View style="@style/DrawerDividerStyle" />

        <LinearLayout
            android:id="@+id/draweritem_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_help_outline_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/help"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/draweritem_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_info_outline_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/aboutApp"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/draweritem_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_contact_outline_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/aboutMe"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

        <View style="@style/DrawerDividerStyle" />

        <LinearLayout
            android:id="@+id/draweritem_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/drawer_item_selector"
            android:foreground="@drawable/drawer_item_list_ripple"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_oui_settings_outline_24" />

            <TextView
                style="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:text="@string/settings"
                android:textAlignment="viewStart"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>