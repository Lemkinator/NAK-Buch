    <queries>
        <intent>
            <action android:name="android.speech.action.RECOGNIZE_SPEECH" />
        </intent>
    </queries>

    <application
        android:name=".App"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/OneUITheme"
        tools:targetApi="32">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="SamsungBasicInteraction"
            android:value="SEP10" />
        <meta-data
            android:name="com.samsung.android.icon_container.has_icon_container"
            android:value="true" />
        <meta-data
            android:name="com.samsung.android.icon_container.feature_appicon"
            android:value="ADAPTIVEICON_SHADOW" />

        <activity android:name=".ui.EasterEggSwitchBarActivity" />
        <activity android:name=".ui.HistorySwitchBarActivity" />
        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.TextviewActivity" />
        <activity android:name=".ui.ImgviewActivity" />
        <activity android:name=".ui.HelpActivity" />
        <activity android:name=".ui.AboutMeActivity" />
        <activity
            android:name=".ui.AboutActivity"
            android:theme="@style/OneUIAboutTheme" />
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">

        </activity>
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/OneUISplashTheme">
            <meta-data
                android:name="com.sec.android.app.launcher.icon_theme"
                android:value="themeColor" /> <!-- new (only Samsung, >Android 12) Themed Icon -->
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SplashActivityGesangbuch"
            android:exported="true"
            android:theme="@style/OneUISplashTheme" />
        <activity
            android:name=".ui.SplashActivityChorbuch"
            android:exported="true"
            android:theme="@style/OneUISplashTheme" />
        <activity
            android:name=".ui.SplashActivityJugendliederbuch"
            android:exported="true"
            android:theme="@style/OneUISplashTheme" />
        <activity
            android:name=".ui.SplashActivityJBErgaenzungsheft"
            android:exported="true"
            android:theme="@style/OneUISplashTheme" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="de.lemke.nakbuch.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>